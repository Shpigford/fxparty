<header class="bg-white shadow">
  <div class="flex justify-between px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <h1 class="text-2xl font-bold text-gray-900">
    <% if @wallet.status == 'synced' %>
      <%= @wallet.domain.present? ? @wallet.domain : @wallet.address %> <span class="text-xs font-light text-gray-400 align-middle">Updated <%= time_ago_in_words @wallet.last_updated_at %> ago</span>
    <% elsif @wallet.status == 'syncing' %>
      Syncing your fxhash collection!
    <% elsif @wallet.status == 'not_found' %>
      We couldn't find this wallet on fxhash ðŸ˜¢
    <% end %>
    </h1>
    <% if @wallet.status == 'synced' %>
    <%= link_to "<i class='mt-0.5 mr-2 fa-duotone fa-download'></i> Download CSV".html_safe, download_wallet_path(@wallet.address), class: "inline-flex justify-center px-4 py-2 border-0 shadow-sm text-sm font-bold rounded-md bg-blue-500 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500" %>
    <% end %>
  </div>
</header>

<main>
  <div class="py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="flex flex-col">
      <div class="-my-2 sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle sm:px-6 lg:px-8">
          
            <% if @wallet.status == 'synced' %>

            <div class="mb-10">
              <dl class="grid grid-cols-1 mt-5 overflow-hidden bg-white divide-y divide-gray-200 rounded-lg shadow md:grid-cols-4 md:divide-y-0 md:divide-x">
                <div class="px-4 py-5 sm:p-6">
                  <dt class="text-base font-normal text-gray-900">
                    Portfolio Cost Basis
                  </dt>
                  <dd class="flex items-baseline justify-between mt-1 md:block lg:flex">
                    <div class="flex items-baseline text-2xl font-semibold text-blue-600">
                      <%= display_tez @cost_basis %>
                    </div>
                  </dd>
                </div>

                <div class="px-4 py-5 sm:p-6">
                  <dt class="text-base font-normal text-gray-900">
                    Portfolio Floor Value
                  </dt>
                  <dd class="flex items-baseline justify-between mt-1 md:block lg:flex">
                    <div class="flex items-baseline text-2xl font-semibold text-blue-600">
                      <%= display_tez @floor_value %>
                    </div>
                  </dd>
                </div>

                <div class="px-4 py-5 sm:p-6">
                  <dt class="text-base font-normal text-gray-900">
                    Unrealized Gains/Losses
                  </dt>
                  <dd class="flex items-baseline justify-between mt-1 md:block lg:flex">
                    <div class="flex items-baseline text-2xl font-semibold text-blue-600">
                      <span class="<%= @unrealized > 0 ? 'text-green-500' : 'text-red-500' %>"><%= display_tez @unrealized %></span>
                    </div>
                  </dd>
                </div>

                <div class="px-4 py-5 sm:p-6">
                  <dt class="text-base font-normal text-gray-900">
                    Portfolio Size
                  </dt>
                  <dd class="flex items-baseline justify-between mt-1 md:block lg:flex">
                    <div class="flex items-baseline text-2xl font-semibold text-blue-600">
                      <%= number_with_delimiter @items.count %>
                    </div>
                  </dd>
                </div>
              </dl>
            </div>

            <div class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg">
            <%= turbo_frame_tag "items" do %>
            <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 table-fixed">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="sticky left-0 px-4 py-3 text-xs font-medium text-left text-gray-500 uppercase bg-gray-50">
                  <%= heading_link(@wallet.address, 'Item', 'item', 'text', params[:dir], params[:sort]) %>
                  </th>
                  <th scope="col" class="px-4 py-3 text-xs font-medium text-left text-gray-500 uppercase number whitespace-nowrap">
                    <%= heading_link(@wallet.address, 'Token', 'token', 'number', params[:dir], params[:sort]) %>
                  </th>
                  <th scope="col" class="px-4 py-3 text-xs font-medium text-left text-gray-500 uppercase number whitespace-nowrap">
                    <%= heading_link(@wallet.address, 'Progress', 'balance', 'number', params[:dir], params[:sort]) %>
                  </th>
                  <th scope="col" class="px-4 py-3 text-xs font-medium text-left text-gray-500 uppercase number whitespace-nowrap">
                    <%= heading_link(@wallet.address, 'Price Paid', 'last_purchase_price_tz', 'number', params[:dir], params[:sort]) %>
                  </th>
                  <th scope="col" class="px-4 py-3 text-xs font-medium text-left text-gray-500 uppercase number whitespace-nowrap">
                    <%= heading_link(@wallet.address, 'Floor', 'floor', 'number', params[:dir], params[:sort]) %>
                  </th>
                  <th scope="col" class="px-4 py-3 text-xs font-medium text-left text-gray-500 uppercase number whitespace-nowrap">
                    <%= heading_link(@wallet.address, 'Highest Sold', 'highest_sold', 'number', params[:dir], params[:sort]) %>
                  </th>
                  <th scope="col" class="px-4 py-3 text-xs font-medium text-left text-gray-500 uppercase number whitespace-nowrap">
                    <%= heading_link(@wallet.address, 'Avg Price 24h', 'sec_volume_tz_24', 'number', params[:dir], params[:sort]) %>
                  </th>
                  <th scope="col" class="px-4 py-3 text-xs font-medium text-left text-gray-500 uppercase whitespace-nowrap">
                    <%= heading_link(@wallet.address, '# Sales 24h', 'sec_volume_nb_24', 'number', params[:dir], params[:sort]) %>
                  </th>
                </tr>
              </thead>
              
              <tbody>
                <% @items.each do |item| %>
                <tr class="bg-white">
                  <td class="absolute sticky left-0 max-w-xs px-4 py-4 text-sm text-gray-800 truncate bg-white border-r border-gray-200 whitespace-nowrap">
                    <%= link_to item.name, "https://www.fxhash.xyz/gentk/#{item.fxid}", class: 'text-blue-600 hover:text-blue-900' %>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-800 whitespace-nowrap bg-gradient-to-r from-gray-50 via-white to-white">
                    <%= link_to item.token.fxid, "https://www.fxhash.xyz/marketplace/generative/#{item.token.fxid}", class: 'text-blue-600 hover:text-blue-900' %>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-800 whitespace-nowrap">
                  <div class="flex">
                    <div class="w-24 h-1 mt-1 bg-gray-200">
                    <% 
                      progress_color = item.token.mint_progress.to_f >= 100 ? 'bg-green-500' : 'bg-blue-500'
                    %>
                      <div class="h-1 <%= progress_color %>" style="width: <%= item.token.mint_progress %>%"></div> 
                    </div> 
                    <div class="ml-2 text-xs text-gray-500">(<%= item.token.balance %>/<%= item.token.supply %>)</div>
                  </div>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-800 whitespace-nowrap">
                  <% if item.last_purchase_price_tz.present? %>
                    <%= display_tez item.last_purchase_price_tz %>
                  <% end %>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-800 whitespace-nowrap">
                    <% if item.last_purchase_price_tz.present? %>
                    <% 
                      floor_color = item.token.floor.to_f > item.last_purchase_price_tz.to_f ? 'text-green-500' : 'text-red-500'
                    %>
                    <%= item.token.floor.present? ? "<span class='#{floor_color}'>#{display_tez item.token.floor}</span>".html_safe : "<span class='text-gray-200'>â€”</span>".html_safe %>
                    <% end %>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-800 whitespace-nowrap">
                    <%= item.token.highest_sold.present? ? display_tez(item.token.highest_sold) : "<span class='text-gray-200'>â€”</span>".html_safe %>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-800 whitespace-nowrap">
                    <% 
                      volume_color = item.token.sec_volume_tz_24.to_f > item.last_purchase_price_tz.to_f ? 'text-green-500' : 'text-red-500'
                    %>
                    <%= item.token.sec_volume_tz_24.to_i > 0 ? "<span class='#{volume_color}'>#{display_tez(item.token.sec_volume_tz_24.to_f / item.token.sec_volume_nb_24.to_f)}</span>".html_safe : "<span class='text-gray-200'>â€”</span>".html_safe %>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-800 whitespace-nowrap">
                    <%= item.token.sec_volume_nb_24.to_i %>
                  </td>
                </tr>
                <% end %>
              </tbody>
              
            </table>
            </div>
            <% end %>
            </div>
            <% elsif @wallet.status == 'syncing' %>
            <div class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg">
            <div class="px-8 py-5 bg-white">
              <p>We're currently syncing your wallet! Refresh the page in a few seconds for ðŸª„.</p>
            </div>
            </div>
            <% elsif @wallet.status == 'not_found' %>
            <div class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg">
            <div class="px-8 py-5 bg-white">
              <p>Looks like this isn't a valid wallet address or account on fxhash.</p>
            </div>
            </div>
            <% end %>
          
        </div>
      </div>
    </div>
  </div>
</main>